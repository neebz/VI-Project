h1= title
p Welcome to #{title}

div#app_view
	form#new_post_form
		input#post_message(type="text")
		button#submit_post(type="submit") Add Post

	div#posts_list

script#post_template(type="text/template")
	div.post_message <%= post_message %>
	div
		a#delete_post.post_links(href="#") Delete
	<% if (starred) { %>
	div
		a#star_toggle.post_links(href="#") Unstar
	<% } else { %>
	div
		a#star_toggle.post_links(href="#") Star
	<% } %>
	hr